<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="161dp"
            android:layout_height="118dp"
            android:contentDescription="@string/webViewPic"
            app:srcCompat="@mipmap/ic_launcher_round_foreground" />

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:foregroundGravity="center_vertical|center"
            android:gravity="center"
            android:text="@string/chooseWeb"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:visibility="visible"
            app:fontFamily="cursive"
            app:layout_gravity="center|top|center_vertical" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center|center_horizontal">

            <TextView
                android:id="@+id/textViewUCSD"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:text="@string/ucsdExt"
                android:textColor="#124d83"
                android:textSize="20sp"
                app:fontFamily="serif"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/buttonUCSD"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="@string/buttonUCSD"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textViewYahoo"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/yahoo"
                android:textColor="#4d00ae"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:fontFamily="serif"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/buttonYahoo"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:text="@string/buttonYahoo"
                app:layout_column="1"
                app:layout_row="1" />

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>